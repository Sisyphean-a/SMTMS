<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SMTMS.Avalonia.App">
             <!-- ThemeVariant will be set programmatically -->

    <Application.Resources>
        <Color x:Key="GeekBlue">#0066CC</Color>
        <SolidColorBrush x:Key="GeekBlueBrush" Color="{StaticResource GeekBlue}" />
        <FontFamily x:Key="MonoFont">JetBrains Mono, Cascadia Code, Consolas, monospace</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://Semi.Avalonia/Themes/Index.axaml" />
        <StyleInclude Source="avares://Semi.Avalonia.DataGrid/Index.axaml" />
        
        <!-- Light Mode Styles -->
        <Style Selector="Button.Solid">
            <Setter Property="BorderBrush" Value="{StaticResource GeekBlueBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource GeekBlueBrush}" />
        </Style>
        
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!-- Default Border Style (Light Mode) -->
        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="#E1E3E6" />
        </Style>

        <!-- Default Border Style (Light Mode) -->
        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="#E1E3E6" />
        </Style>

        <!-- Dark Mode Overrides -->
        <!-- Window -->
        <Style Selector="Window.theme-dark">
            <Setter Property="Background" Value="#1E1E1E" />
        </Style>

        <!-- TextBlock - 所有文本 -->
        <Style Selector="Window.theme-dark TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <!-- TextBox - 输入框 -->
        <Style Selector="Window.theme-dark TextBox">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="BorderBrush" Value="#3F3F3F" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <!-- Border - 边框 -->
        <Style Selector="Window.theme-dark Border">
            <Setter Property="BorderBrush" Value="#3F3F3F" />
        </Style>

        <!-- Button -->
        <Style Selector="Window.theme-dark Button">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <Style Selector="Window.theme-dark Button:pointerover">
            <Setter Property="Background" Value="#3F3F3F" />
        </Style>

        <!-- DataGrid - 表格 -->
        <Style Selector="Window.theme-dark DataGrid">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3F3F3F" />
        </Style>

        <Style Selector="Window.theme-dark DataGridRow">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <Style Selector="Window.theme-dark DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#2D2D2D" />
        </Style>

        <Style Selector="Window.theme-dark DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#3F3F3F" />
        </Style>

        <Style Selector="Window.theme-dark DataGridColumnHeader">
            <Setter Property="Background" Value="#252525" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <Style Selector="Window.theme-dark DataGridCell">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <!-- ScrollViewer -->
        <Style Selector="Window.theme-dark ScrollViewer">
            <Setter Property="Background" Value="#1E1E1E" />
        </Style>

        <!-- Panel backgrounds -->
        <Style Selector="Window.theme-dark Panel">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!-- Expander -->
        <Style Selector="Window.theme-dark Expander">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <!-- ToggleSwitch -->
        <Style Selector="Window.theme-dark ToggleSwitch">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>

        <!-- TabControl -->
        <Style Selector="Window.theme-dark TabControl">
            <Setter Property="Background" Value="#1E1E1E" />
        </Style>

        <Style Selector="Window.theme-dark TabItem">
            <Setter Property="Foreground" Value="#A0A0A0" />
        </Style>

        <Style Selector="Window.theme-dark TabItem:selected">
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
    </Application.Styles>
</Application>
