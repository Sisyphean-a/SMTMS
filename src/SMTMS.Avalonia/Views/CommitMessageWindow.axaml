<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="SMTMS.Avalonia.Views.CommitMessageWindow"
        Title="提交信息"
        Width="440"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        UseLayoutRounding="True"
        KeyDown="OnKeyDown">
    
    <Border Padding="2" 
            Margin="20"
            Background="#E1E3E6" 
            CornerRadius="0"
            BoxShadow="0 8 32 0 #30000000"
            PointerPressed="OnBorderPointerPressed">
        <Border Background="#FFFFFF" Padding="20">
            <StackPanel Spacing="20">
                <TextBlock Text="提交更改" 
                           FontFamily="{StaticResource MonoFont}" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource GeekBlueBrush}"/>
                
                <TextBlock Text="请输入本次提交的描述:" 
                           FontSize="11" 
                           Foreground="#999999"/>
                
                <TextBox Name="MessageInput" 
                         Watermark="例如: 更新了部分翻译..." 
                         Height="120" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap"
                         Classes="TextArea"
                         FontFamily="{StaticResource MonoFont}"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,10,0,0">
                    <Button Content="取消"
                            Click="Cancel_Click"
                            Classes="Tertiary"
                            ToolTip.Tip="放弃本次提交 (Esc)"
                            AutomationProperties.Name="取消提交"/>
                    <Button Content="确认"
                            Click="Confirm_Click"
                            Classes="Solid"
                            ToolTip.Tip="提交本次更改 (Ctrl+Enter)"
                            AutomationProperties.Name="确认提交"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</Window>
