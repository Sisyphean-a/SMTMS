<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="SMTMS.Avalonia.Views.CommitMessageWindow"
        Title="提交信息"
        Width="440"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">
    
    <Border Padding="20" 
            Margin="20"
            Background="{DynamicResource SemiColorBackground0}" 
            CornerRadius="12"
            BoxShadow="0 4 20 0 #40000000"
            PointerPressed="OnBorderPointerPressed">
        <StackPanel Spacing="15">
            <TextBlock Text="提交更改" FontSize="18" FontWeight="Bold"/>
            
            <TextBlock Text="请输入本次提交的描述:" FontWeight="Normal" Foreground="Gray"/>
            
            <TextBox Name="MessageInput" 
                     Watermark="例如: 更新了部分翻译..." 
                     Height="100" 
                     AcceptsReturn="True" 
                     TextWrapping="Wrap"
                     Classes="TextArea"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                <Button Content="取消" Click="Cancel_Click" Theme="{DynamicResource LightButton}"/>
                <Button Content="确认" Click="Confirm_Click" Theme="{DynamicResource SolidButton}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
