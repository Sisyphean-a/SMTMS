<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="SMTMS.Avalonia.Views.HistoryView"
    x:DataType="vm:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SMTMS.Avalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto, *, 4, 300">
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                Classes="Tertiary"
                Command="{Binding HistoryViewModel.LoadHistoryCommand}"
                Content="刷新列表" />

            <Button
                Classes="Danger"
                Command="{Binding HistoryViewModel.RollbackSnapshotCommand}"
                Content="回滚（重置）"
                ToolTip.Tip="将当前状态完全回退到选中快照，并删除之后的所有历史记录。" />
        </StackPanel>

        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="#E1E3E6"
            BorderThickness="0,1,0,1"
            Grid.Row="1"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding HistoryViewModel.SnapshotHistory}"
            RowBackground="Transparent"
            SelectedItem="{Binding HistoryViewModel.SelectedSnapshot}">
            <DataGrid.Styles>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FAFAFA" />
                    <Setter Property="Foreground" Value="#999999" />
                    <Setter Property="FontSize" Value="11" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Id}"
                    FontFamily="{StaticResource MonoFont}"
                    Header="ID"
                    Width="60" />
                <DataGridTextColumn
                    Binding="{Binding Message}"
                    Header="提交信息"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding TotalMods}"
                    FontFamily="{StaticResource MonoFont}"
                    Header="模组数"
                    Width="80" />
                <DataGridTextColumn
                    Binding="{Binding Timestamp}"
                    FontFamily="{StaticResource MonoFont}"
                    Header="时间戳"
                    Width="180" />
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter
            Background="#E1E3E6"
            Grid.Row="2"
            Height="1"
            HorizontalAlignment="Stretch"
            ResizeDirection="Rows" />

        <Grid ColumnDefinitions="3*, 4, 3*" Grid.Row="3">
            <DataGrid
                AutoGenerateColumns="False"
                BorderBrush="#E1E3E6"
                BorderThickness="0,0,1,0"
                Grid.Column="0"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding HistoryViewModel.ModDiffChanges}"
                RowBackground="Transparent"
                SelectedItem="{Binding HistoryViewModel.SelectedDiffItem}">
                <DataGrid.Styles>
                    <Style Selector="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FAFAFA" />
                        <Setter Property="Foreground" Value="#999999" />
                        <Setter Property="FontSize" Value="11" />
                    </Style>
                </DataGrid.Styles>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding ModName}"
                        Header="模组名称"
                        Width="200" />
                    <DataGridTextColumn
                        Binding="{Binding FolderName}"
                        FontFamily="{StaticResource MonoFont}"
                        Header="文件夹"
                        Width="150" />
                    <DataGridTemplateColumn Header="变更详情" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,4">
                                    <TextBlock FontSize="12" IsVisible="{Binding NameChange.HasChange}">
                                        <Run Foreground="#999999" Text="名称: " />
                                        <Run Foreground="{StaticResource GeekBlueBrush}" Text="{Binding NameChange.ChangeSummary}" />
                                    </TextBlock>
                                    <TextBlock FontSize="12" IsVisible="{Binding DescriptionChange.HasChange}">
                                        <Run Foreground="#999999" Text="描述: " />
                                        <Run Foreground="{StaticResource GeekBlueBrush}" Text="{Binding DescriptionChange.ChangeSummary}" />
                                    </TextBlock>
                                    <TextBlock FontSize="12" IsVisible="{Binding AuthorChange.HasChange}">
                                        <Run Foreground="#999999" Text="作者: " />
                                        <Run Foreground="{StaticResource GeekBlueBrush}" Text="{Binding AuthorChange.ChangeSummary}" />
                                    </TextBlock>
                                    <TextBlock FontSize="12" IsVisible="{Binding VersionChange.HasChange}">
                                        <Run Foreground="#999999" Text="版本: " />
                                        <Run Foreground="{StaticResource GeekBlueBrush}" Text="{Binding VersionChange.ChangeSummary}" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter
                Background="#E1E3E6"
                Grid.Column="1"
                ResizeDirection="Columns"
                Width="1" />

            <Border
                Background="#FFFFFF"
                BorderBrush="#E1E3E6"
                BorderThickness="0"
                Grid.Column="2"
                Padding="15">
                <ScrollViewer>
                    <StackPanel IsVisible="{Binding HistoryViewModel.SelectedDiffItem, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <TextBlock
                            FontFamily="{StaticResource MonoFont}"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource GeekBlueBrush}"
                            Margin="0,0,0,15"
                            Text="差异分析器" />

                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#999999"
                                IsVisible="{Binding HistoryViewModel.SelectedDiffItem.NameChange.HasChange}"
                                Text="名称变更" />
                            <Grid ColumnDefinitions="*,*" IsVisible="{Binding HistoryViewModel.SelectedDiffItem.NameChange.HasChange}">
                                <TextBox
                                    Background="#FFF0F0"
                                    BorderThickness="0"
                                    Foreground="#D32F2F"
                                    Grid.Column="0"
                                    IsReadOnly="True"
                                    Margin="0,0,4,0"
                                    Text="{Binding HistoryViewModel.SelectedDiffItem.NameChange.OldValue}" />
                                <TextBox
                                    Background="#F0F7FF"
                                    BorderThickness="0"
                                    Foreground="#1976D2"
                                    Grid.Column="1"
                                    IsReadOnly="True"
                                    Margin="4,0,0,0"
                                    Text="{Binding HistoryViewModel.SelectedDiffItem.NameChange.NewValue}" />
                            </Grid>

                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#999999"
                                IsVisible="{Binding HistoryViewModel.SelectedDiffItem.DescriptionChange.HasChange}"
                                Margin="0,10,0,0"
                                Text="描述变更" />
                            <Grid ColumnDefinitions="*,*" IsVisible="{Binding HistoryViewModel.SelectedDiffItem.DescriptionChange.HasChange}">
                                <TextBox
                                    AcceptsReturn="True"
                                    Background="#FFF0F0"
                                    BorderThickness="0"
                                    Foreground="#D32F2F"
                                    Grid.Column="0"
                                    Height="100"
                                    IsReadOnly="True"
                                    Margin="0,0,4,0"
                                    Text="{Binding HistoryViewModel.SelectedDiffItem.DescriptionChange.OldValue}"
                                    TextWrapping="Wrap" />
                                <TextBox
                                    AcceptsReturn="True"
                                    Background="#F0F7FF"
                                    BorderThickness="0"
                                    Foreground="#1976D2"
                                    Grid.Column="1"
                                    Height="100"
                                    IsReadOnly="True"
                                    Margin="4,0,0,0"
                                    Text="{Binding HistoryViewModel.SelectedDiffItem.DescriptionChange.NewValue}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border
                Background="#EEFFFFFF"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                IsVisible="{Binding HistoryViewModel.IsLoadingDiff}">
                <TextBlock
                    FontFamily="{StaticResource MonoFont}"
                    FontSize="20"
                    Foreground="{StaticResource GeekBlueBrush}"
                    HorizontalAlignment="Center"
                    Text="[正在执行差异分析...]"
                    VerticalAlignment="Center" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
