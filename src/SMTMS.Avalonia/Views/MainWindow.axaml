<Window
    Title="{Binding ApplicationTitle}"
    WindowStartupLocation="CenterScreen"
    Width="1200"
    Height="800"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="SMTMS.Avalonia.Views.MainWindow"
    x:DataType="vm:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:SMTMS.Avalonia.Views"
    xmlns:vm="using:SMTMS.Avalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto, *">
        <!--  Toolbar  -->
        <Border
            Background="Transparent"
            BorderBrush="#E1E3E6"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="15,10">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Classes="Solid"
                        Command="{Binding ModListViewModel.LoadModsCommand}"
                        Content="扫描模组" />
                </StackPanel>

                <TextBlock
                    FontFamily="{StaticResource MonoFont}"
                    FontSize="11"
                    Foreground="#999999"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Margin="10,0"
                    Text="{Binding StatusMessage}"
                    VerticalAlignment="Center" />

                <StackPanel
                    Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Classes="Tertiary"
                        Command="{Binding SyncToDatabaseCommand}"
                        Content="同步数据" />
                    <Button
                        Classes="Tertiary"
                        Command="{Binding RestoreFromDatabaseCommand}"
                        Content="恢复数据" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Tabs  -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="模组列表">
                <views:ModListView />
            </TabItem>

            <TabItem Header="历史记录">
                <views:HistoryView />
            </TabItem>

            <TabItem Header="设置">
                <views:SettingsView DataContext="{Binding SettingsViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
