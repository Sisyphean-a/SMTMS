<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="SMTMS.Avalonia.Views.ModListView"
    x:DataType="vm:MainViewModel"
    x:Name="Root"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SMTMS.Avalonia.ViewModels"
    xmlns:cv="using:SMTMS.Avalonia.Converters"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <cv:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <cv:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <cv:BoolToFontStyleConverter x:Key="BoolToFontStyleConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="2*, 4, 1*">
        <!--  Mod List  -->
        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,0,1,0"
            Grid.Column="0"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding ModListViewModel.Mods}"
            RowBackground="Transparent"
            SelectedItem="{Binding ModListViewModel.SelectedMod}"
            x:CompileBindings="False"
            x:Name="ModsGrid">
            <DataGrid.Styles>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="11" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
                <Style Selector="DataGridRow" x:DataType="vm:ModViewModel">
                    <Setter Property="Tag" Value="{Binding RowStatus}" />
                    <Setter Property="FontStyle" Value="{Binding IsDirty, Converter={StaticResource BoolToFontStyleConverter}}" />
                </Style>
                <!-- 1 = Changed (Local modification) -->
                <Style Selector="DataGridRow[Tag=1]">
                    <Setter Property="Foreground" Value="{StaticResource GeekBlueBrush}" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
                <!-- 2 = New (Untracked) -->
                <Style Selector="DataGridRow[Tag=2]">
                    <Setter Property="Foreground" Value="#00C853" /> <!-- Green for new items -->
                    <Setter Property="FontStyle" Value="Italic" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="åç§°"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowNameColumn, ElementName=ModsGrid}"
                    Width="200" />
                <DataGridTemplateColumn
                    Header="ç‰ˆæœ¬"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowVersionColumn, ElementName=ModsGrid}"
                    SortMemberPath="Version"
                    Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="vm:ModViewModel">
                            <Panel>
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding OpenNexusPageCommand}"
                                    Content="{Binding Version}"
                                    CornerRadius="0"
                                    Cursor="Hand"
                                    FontFamily="{StaticResource MonoFont}"
                                    FontSize="12"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    IsVisible="{Binding HasNexusUrl}"
                                    Margin="0"
                                    Padding="12,0,0,0"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center" />
                                <TextBlock
                                    FontFamily="{StaticResource MonoFont}"
                                    FontSize="12"
                                    HorizontalAlignment="Stretch"
                                    IsVisible="{Binding HasNexusUrl, Converter={StaticResource BoolNegationConverter}}"
                                    Margin="0"
                                    Padding="12,0,0,0"
                                    Text="{Binding Version}"
                                    VerticalAlignment="Center" />
                            </Panel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Binding="{Binding UniqueID}"
                    FontFamily="{StaticResource MonoFont}"
                    FontSize="11"
                    Header="å”¯ä¸€ ID"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowIdColumn, ElementName=ModsGrid}"
                    Width="250" />

                <DataGridTextColumn
                    Binding="{Binding Description}"
                    Header="æè¿°"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowDescriptionColumn, ElementName=ModsGrid}"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter
            Background="{DynamicResource SystemControlForegroundBaseLowBrush}"
            Grid.Column="1"
            ResizeDirection="Columns"
            Width="1" />

        <!--  Detail Pane  -->
        <Panel Grid.Column="2">
            <Border
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                HorizontalAlignment="Stretch"
                IsVisible="{Binding ModListViewModel.SelectedMod, Converter={x:Static ObjectConverters.IsNull}}"
                Padding="20"
                VerticalAlignment="Stretch">
                <StackPanel
                    HorizontalAlignment="Center"
                    Spacing="10"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        HorizontalAlignment="Center"
                        Text="æœªé€‰æ‹©æ¨¡ç»„" />
                    <TextBlock
