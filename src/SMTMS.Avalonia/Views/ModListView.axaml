                        <StackPanel Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Opacity="0.6"
                                Text="æè¿°" />
                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="*">
                                <TextBox
                                    AcceptsReturn="True"
                                    Grid.Column="0"
                                    Height="120"
                                    Text="{Binding ModListViewModel.SelectedMod.Description}"
                                    TextWrapping="Wrap"
                                    VerticalContentAlignment="Top" />
                                <Button
                                    Grid.Column="1"
                                    Classes="Tertiary"
                                    Command="{Binding ModListViewModel.SelectedMod.TranslateDescriptionCommand}"
                                    Content="ðŸŒ"
                                    FontSize="16"
                                    Height="32"
                                    IsEnabled="{Binding ModListViewModel.SelectedMod.IsTranslatingDescription, Converter={StaticResource BoolNegationConverter}}"
                                    Margin="8,0,0,0"
                                    Padding="4"
                                    AutomationProperties.Name="ç¿»è¯‘æè¿°"
