                                    AutomationProperties.Name="ç¿»è¯‘åç§°"
                                    ToolTip.Tip="ç¿»è¯‘åç§°"
                                    Width="40" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Opacity="0.6"
                                Text="å”¯ä¸€ ID" />
                            <TextBox
                                FontFamily="{StaticResource MonoFont}"
                                IsReadOnly="True"
                                Opacity="0.7"
                                Text="{Binding ModListViewModel.SelectedMod.UniqueID}" />
                        </StackPanel>

                        <StackPanel IsVisible="{Binding ModListViewModel.SelectedMod.NexusId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
