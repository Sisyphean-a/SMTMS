                                Command="{Binding ModListViewModel.SelectedMod.ShowHistoryCommand}"
                                Content="æŸ¥çœ‹åŽ†å²" />
                            <Button
                                Classes="Warning"
                                Command="{Binding ModListViewModel.SelectedMod.DiscardChangesCommand}"
                                Content="æ”¾å¼ƒå˜æ›´"
                                IsVisible="{Binding ModListViewModel.SelectedMod.IsDirty}" 
                                Theme="{DynamicResource TertiaryButton}"/>
                            <Button
                                Classes="Solid"
                                Command="{Binding ModListViewModel.SaveModCommand}"
                                Content="ä¿å­˜æ›´æ”¹" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            </Border>
        </Panel>
    </Grid>
</UserControl>
