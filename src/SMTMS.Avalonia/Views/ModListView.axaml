<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="SMTMS.Avalonia.Views.ModListView"
    x:DataType="vm:MainViewModel"
    x:Name="Root"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SMTMS.Avalonia.ViewModels"
    xmlns:cv="using:SMTMS.Avalonia.Converters"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <cv:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <cv:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <cv:BoolToFontStyleConverter x:Key="BoolToFontStyleConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="2*, 4, 1*">
        <!--  Mod List  -->
        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="#E1E3E6"
            BorderThickness="0,0,1,0"
            Grid.Column="0"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding ModListViewModel.Mods}"
            RowBackground="Transparent"
            SelectedItem="{Binding ModListViewModel.SelectedMod}"
            x:CompileBindings="False"
            x:Name="ModsGrid">
            <DataGrid.Styles>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="11" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
                <Style Selector="DataGridRow" x:DataType="vm:ModViewModel">
                    <Setter Property="Tag" Value="{Binding HasLocalChanges}" />
                    <Setter Property="FontWeight" Value="{Binding HasLocalChanges, Converter={StaticResource BoolToFontWeightConverter}}" />
                    <Setter Property="FontStyle" Value="{Binding IsDirty, Converter={StaticResource BoolToFontStyleConverter}}" />
                </Style>
                <Style Selector="DataGridRow[Tag=True]">
                    <Setter Property="Foreground" Value="{StaticResource GeekBlueBrush}" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="åç§°"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowNameColumn, ElementName=ModsGrid}"
                    Width="200" />
                <DataGridTemplateColumn
                    Header="ç‰ˆæœ¬"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowVersionColumn, ElementName=ModsGrid}"
                    SortMemberPath="Version"
                    Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="vm:ModViewModel">
                            <Panel>
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding OpenNexusPageCommand}"
                                    Content="{Binding Version}"
                                    CornerRadius="0"
                                    Cursor="Hand"
                                    FontFamily="{StaticResource MonoFont}"
                                    FontSize="12"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    IsVisible="{Binding HasNexusUrl}"
                                    Margin="0"
                                    Padding="12,0,0,0"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center" />
                                <TextBlock
                                    FontFamily="{StaticResource MonoFont}"
                                    FontSize="12"
                                    HorizontalAlignment="Stretch"
                                    IsVisible="{Binding HasNexusUrl, Converter={StaticResource BoolNegationConverter}}"
                                    Margin="0"
                                    Padding="12,0,0,0"
                                    Text="{Binding Version}"
                                    VerticalAlignment="Center" />
                            </Panel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Binding="{Binding UniqueID}"
                    FontFamily="{StaticResource MonoFont}"
                    FontSize="11"
                    Header="å”¯ä¸€ ID"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowIdColumn, ElementName=ModsGrid}"
                    Width="250" />

                <DataGridTextColumn
                    Binding="{Binding Description}"
                    Header="æè¿°"
                    IsVisible="{Binding DataContext.ModListViewModel.ShowDescriptionColumn, ElementName=ModsGrid}"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter
            Background="#E1E3E6"
            Grid.Column="1"
            ResizeDirection="Columns"
            Width="1" />

        <!--  Detail Pane  -->
        <Border
            BorderThickness="0"
            Grid.Column="2"
            IsVisible="{Binding ModListViewModel.SelectedMod, Converter={x:Static ObjectConverters.IsNotNull}}"
            Padding="20">

            <Grid RowDefinitions="Auto, *">
                <TextBlock
                    FontFamily="{StaticResource MonoFont}"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource GeekBlueBrush}"
                    Grid.Row="0"
                    Margin="0,0,0,15"
                    Text="æ¨¡ç»„è¯¦æƒ…ç¼–è¾‘" />

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Spacing="20">
                        <StackPanel Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Opacity="0.6"
                                Text="åç§°" />
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBox 
                                    Grid.Column="0"
                                    Text="{Binding ModListViewModel.SelectedMod.Name}" />
                                <Button
                                    Grid.Column="1"
                                    Classes="Tertiary"
                                    Command="{Binding ModListViewModel.SelectedMod.TranslateNameCommand}"
                                    Content="ðŸŒ"
                                    FontSize="16"
                                    Height="32"
                                    IsEnabled="{Binding ModListViewModel.SelectedMod.IsTranslatingName, Converter={StaticResource BoolNegationConverter}}"
                                    Margin="8,0,0,0"
                                    Padding="4"
                                    ToolTip.Tip="ç¿»è¯‘åç§°"
                                    Width="40" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Opacity="0.6"
                                Text="å”¯ä¸€ ID" />
                            <TextBox
                                FontFamily="{StaticResource MonoFont}"
                                IsReadOnly="True"
                                Opacity="0.7"
                                Text="{Binding ModListViewModel.SelectedMod.UniqueID}" />
                        </StackPanel>

                        <StackPanel IsVisible="{Binding ModListViewModel.SelectedMod.NexusId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Opacity="0.6"
                                Text="Nç½‘ ID" />
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBox
                                    FontFamily="{StaticResource MonoFont}"
                                    Grid.Column="0"
                                    IsReadOnly="True"
                                    Opacity="0.7"
                                    Text="{Binding ModListViewModel.SelectedMod.NexusId}" />
                                <Button
                                    Classes="Tertiary"
                                    Command="{Binding ModListViewModel.SelectedMod.OpenNexusPageCommand}"
                                    Content="é“¾æŽ¥"
                                    Grid.Column="1"
                                    Margin="8,0,0,0" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="6">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Opacity="0.6"
                                Text="æè¿°" />
                            <Grid ColumnDefinitions="*, Auto" RowDefinitions="*">
                                <TextBox
                                    AcceptsReturn="True"
                                    Grid.Column="0"
                                    Height="120"
                                    Text="{Binding ModListViewModel.SelectedMod.Description}"
                                    TextWrapping="Wrap"
                                    VerticalContentAlignment="Top" />
                                <Button
                                    Grid.Column="1"
                                    Classes="Tertiary"
                                    Command="{Binding ModListViewModel.SelectedMod.TranslateDescriptionCommand}"
                                    Content="ðŸŒ"
                                    FontSize="16"
                                    Height="32"
                                    IsEnabled="{Binding ModListViewModel.SelectedMod.IsTranslatingDescription, Converter={StaticResource BoolNegationConverter}}"
                                    Margin="8,0,0,0"
                                    Padding="4"
                                    ToolTip.Tip="ç¿»è¯‘æè¿°"
                                    VerticalAlignment="Top"
                                    Width="40" />
                            </Grid>
                        </StackPanel>

                        <StackPanel
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0"
                            Orientation="Horizontal"
                            Spacing="15">
                            <Button
                                Classes="Tertiary"
                                Command="{Binding ModListViewModel.SelectedMod.ShowHistoryCommand}"
                                Content="æŸ¥çœ‹åŽ†å²" />
                            <Button
                                Classes="Solid"
                                Command="{Binding ModListViewModel.SaveModCommand}"
                                Content="ä¿å­˜æ›´æ”¹" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
