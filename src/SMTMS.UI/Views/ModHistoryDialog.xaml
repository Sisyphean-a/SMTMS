<Window x:Class="SMTMS.UI.Views.ModHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mod History" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="History for: " FontWeight="Bold"/>
            <TextBlock x:Name="ModNameTextBlock" Text="Mod Name" Margin="5,0,0,0"/>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="HistoryListView" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="SHA" DisplayMemberBinding="{Binding ShortHash}" Width="80"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding FormattedDate}" Width="180"/>
                    <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="100"/>
                    <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="230"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Rollback to Selected" Width="150" Height="30" Margin="0,0,10,0" Click="Rollback_Click"/>
            <Button Content="Close" Width="80" Height="30" Click="Close_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
