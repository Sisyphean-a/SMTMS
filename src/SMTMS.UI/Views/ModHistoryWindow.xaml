<Window x:Class="SMTMS.UI.Views.ModHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SMTMS.UI.ViewModels"
        mc:Ignorable="d"
        Title="模组历史记录" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="历史版本列表 (仅显示变化部分)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding HistoryItems}" 
                  SelectedItem="{Binding SelectedHistoryItem}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间" Binding="{Binding SnapshotTime}" Width="150"/>
                <DataGridTextColumn Header="名称" Binding="{Binding DisplayName}" Width="200"/>
                <DataGridTextColumn Header="描述" Binding="{Binding DisplayDescription}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="作者" Binding="{Binding DisplayAuthor}" Width="100"/>
                <DataGridTextColumn Header="版本" Binding="{Binding DisplayVersion}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="{Binding SelectedHistoryItem.SnapshotId, StringFormat='选中版本: {0}'}" 
                       VerticalAlignment="Center" Margin="0,0,20,0" Opacity="0.6"/>
            
            <Button Content="应用选中版本" Command="{Binding ApplyCommand}" Padding="15,6" Margin="0,0,10,0"/>
            <Button Content="关闭" Command="{Binding CloseCommand}" Padding="15,6"/>
        </StackPanel>
        
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="正在加载历史..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        </Grid>
    </Grid>
</Window>
